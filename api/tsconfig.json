{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "paths": {
      "@model/*": ["./src/model/*"],
      "@controller/*": ["./src/controller/*"],
      "@routes/*": ["./src/routes/*"],
      "@app/*": ["./src/*"]
    }
  }
}
